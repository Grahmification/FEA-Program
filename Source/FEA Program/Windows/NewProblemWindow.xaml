<Window x:Class="FEA_Program.Windows.NewProblemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FEA_Program.Windows"
        xmlns:vm="clr-namespace:FEA_Program.ViewModels"
        mc:Ignorable="d"
        Title="New Problem" Height="200" Width="250"
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        WindowStyle="ToolWindow">

    <Window.DataContext>
        <vm:NewProblemVM/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <!-- Header row -->
            <RowDefinition Height="Auto"/>
            <!-- Type row -->
            <RowDefinition Height="Auto"/>
            <!-- Material row -->
            <RowDefinition Height="Auto"/>
            <!-- Node Selections row -->
            <RowDefinition Height="Auto"/>
            <!-- Element Options -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10" Orientation="Vertical">
            <Label Content="Problem Type:"/>
            <ComboBox Margin="10, 0, 0, 0" HorizontalAlignment="Stretch" 
                          SelectedItem="{Binding SelectedProblemType}" 
                          ItemsSource="{Binding AvailableProblemTypes}"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="10, 20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="Accept" Height="25" Margin="10" Command="{Binding AcceptCommand}"/>
            <Button Grid.Column="1" Content="Cancel" Height="25" Margin="10" Command="{Binding CancelCommand}"/>
        </Grid>

    </Grid>
</Window>
