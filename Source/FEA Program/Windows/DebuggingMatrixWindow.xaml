<Window x:Class="FEA_Program.Windows.DebuggingMatrixWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:FEA_Program.ViewModels"
        xmlns:conv="clr-namespace:FEA_Program.Converters"
        xmlns:v="clr-namespace:FEA_Program.Views"
        xmlns:local="clr-namespace:FEA_Program.Windows"
        mc:Ignorable="d"
        Title="Problem Matricies" Height="450" Width="800">
    <Window.DataContext>
        <vm:DebugMatrixVM/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <!-- Row for the splitter -->
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*"/>
            <!-- Row for the splitter -->
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Input Matricies -->
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Input Matricies" HorizontalAlignment="Stretch" FontWeight="Bold"/>

            <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Vertical">
                        <Label Content="{Binding K_Matrix_Text}" HorizontalAlignment="Center" FontWeight="Bold"/>
                        <Border BorderBrush="Gray" BorderThickness="1" Margin="1">
                            <v:MatrixViewControl  Matrix="{Binding K_Matrix}"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Vertical">
                        <Label Content="Q Matrix" HorizontalAlignment="Center" FontWeight="Bold" Foreground="DarkGreen"/>
                        <Border BorderBrush="DarkGreen" BorderThickness="1" Margin="1" >
                            <v:MatrixViewControl  Matrix="{Binding Q_Matrix}"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Vertical">
                        <Label Content="F Matrix" HorizontalAlignment="Center" FontWeight="Bold" Foreground="Purple"/>
                        <Border BorderBrush="Purple" BorderThickness="1" Margin="1">
                            <v:MatrixViewControl  Matrix="{Binding F_Matrix}"/>
                        </Border>
                    </StackPanel>

                </Grid>
            </ScrollViewer>

        </Grid>

        <GridSplitter 
            Grid.Row="1"
            Height="3"
            Background="DarkGray"
            HorizontalAlignment="Stretch" 
            ResizeDirection="Rows"
            ResizeBehavior="PreviousAndNext"/>

        <!-- Partially Reduced Matricies -->
        <Grid Grid.Row="2" Background="AliceBlue">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Partially Reduced Matricies" HorizontalAlignment="Stretch" FontWeight="Bold"/>

            <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Vertical">
                        <Label Content="{Binding K_Matrix_Text_Reduced}" HorizontalAlignment="Center" FontWeight="Bold"/>
                        <Border BorderBrush="Gray" BorderThickness="1" Margin="1">
                            <v:MatrixViewControl  Matrix="{Binding K_Matrix_Reduced}"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Vertical">
                        <Label Content="F Matrix" HorizontalAlignment="Center" FontWeight="Bold" Foreground="Purple"/>
                        <Border BorderBrush="Purple" BorderThickness="1" Margin="1">
                            <v:MatrixViewControl  Matrix="{Binding F_Matrix_Reduced}"/>
                        </Border>
                    </StackPanel>

                </Grid>
            </ScrollViewer>
        </Grid>

        <GridSplitter 
            Grid.Row="3"
            Height="3"
            Background="DarkGray"
            HorizontalAlignment="Stretch" 
            ResizeDirection="Rows"
            ResizeBehavior="PreviousAndNext"/>

        <!-- Fully Reduced Matricies -->
        <Grid Grid.Row="4" Background="Beige">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Label Grid.Row="0" Content="Fully Reduced Matricies" HorizontalAlignment="Left" FontWeight="Bold"/>

            <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Vertical">
                        <Label Content="{Binding K_Matrix_Text_Fully_Reduced}" HorizontalAlignment="Center" FontWeight="Bold"/>
                        <Border BorderBrush="Gray" BorderThickness="1" Margin="1">
                            <v:MatrixViewControl  Matrix="{Binding K_Matrix_Fully_Reduced}"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Vertical">
                        <Label Content="F Matrix" HorizontalAlignment="Center" FontWeight="Bold" Foreground="Purple"/>
                        <Border BorderBrush="Purple" BorderThickness="1" Margin="1">
                            <v:MatrixViewControl  Matrix="{Binding F_Matrix_Fully_Reduced}"/>
                        </Border>
                    </StackPanel>

                </Grid>
            </ScrollViewer>
        </Grid>
        
    </Grid>

</Window>
