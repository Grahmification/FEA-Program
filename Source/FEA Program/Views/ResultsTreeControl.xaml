<UserControl x:Class="FEA_Program.Views.ResultsTreeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FEA_Program.Views"
             xmlns:vm="clr-namespace:FEA_Program.ViewModels"
             xmlns:conv="clr-namespace:FEA_Program.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="275">

    <UserControl.DataContext>
        <vm:ProjectVM/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <conv:NumberArrayToStringConverter x:Key="NumberArrayToStringConverter"/>

        <conv:BoolToColorConverter x:Key="ValidValueConverter"
                                    TrueColor="Black"
                                    FalseColor="Orange" />
    </UserControl.Resources>

    <Grid>
        <TreeView>

            <!-- Nodes Sub Tree -->
            <TreeViewItem x:Name="NodesTree" IsExpanded="True" ItemsSource="{Binding Nodes.Items}">
                <TreeViewItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Nodes" />
                    </StackPanel>
                </TreeViewItem.Header>

                <!-- Handle Selection -->
                <TreeViewItem.ItemContainerStyle>
                    <Style TargetType="{x:Type TreeViewItem}">
                        <Setter Property="IsSelected" Value="{Binding Selected, Mode=TwoWay}" />
                    </Style>
                </TreeViewItem.ItemContainerStyle>


                <TreeViewItem.Resources>
                    <!-- Header -->
                    <HierarchicalDataTemplate DataType="{x:Type vm:NodeVM}" ItemsSource="{Binding ResultProperties}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Model.ID, StringFormat={}Node {0}, Mode=OneWay}" Foreground="{Binding DisplacementIsValid, Converter={StaticResource ValidValueConverter}, Mode=OneWay}"/>
                            <CheckBox Content="" IsChecked="{Binding Model.SolutionValid, Mode=OneWay}" IsEnabled="False" Margin="5,0"/>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                    <!-- Sub-items -->
                    <DataTemplate DataType="{x:Type vm:TreePropertyVM}">
                        <TextBlock>
                                <Run Text="{Binding DisplayName, StringFormat={}{0}:, Mode=OneWay}" FontWeight="Bold"/>
                                <Run Text="{Binding DisplayValue, Mode=OneWay}"/>
                        </TextBlock>
                    </DataTemplate>
                </TreeViewItem.Resources>
            </TreeViewItem>

            <!-- Elements Sub Tree -->
            <TreeViewItem x:Name="ElementsTree" IsExpanded="True" ItemsSource="{Binding Elements.Items}">
                <TreeViewItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Elements" />
                    </StackPanel>
                </TreeViewItem.Header>

                <!-- Handle Selection -->
                <TreeViewItem.ItemContainerStyle>
                    <Style TargetType="{x:Type TreeViewItem}">
                        <Setter Property="IsSelected" Value="{Binding Selected, Mode=TwoWay}" />
                    </Style>
                </TreeViewItem.ItemContainerStyle>

                <TreeViewItem.Resources>
                    <!-- Header -->
                    <HierarchicalDataTemplate DataType="{x:Type vm:ElementVM}" ItemsSource="{Binding ResultProperties}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Model.ID, StringFormat={}Element {0}, Mode=OneWay}" Foreground="{Binding StressIsValid, Converter={StaticResource ValidValueConverter}, Mode=OneWay}"/>
                            <CheckBox Content="" IsChecked="{Binding Model.SolutionValid, Mode=OneWay}" IsEnabled="False" Margin="5,0"/>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                    <!-- Sub-items -->
                    <DataTemplate DataType="{x:Type vm:TreePropertyVM}">
                        <TextBlock>
                                <Run Text="{Binding DisplayName, StringFormat={}{0}:, Mode=OneWay}" FontWeight="Bold"/>
                                <Run Text="{Binding DisplayValue, Mode=OneWay}"/>
                        </TextBlock>
                    </DataTemplate>
                </TreeViewItem.Resources>

            </TreeViewItem>

        </TreeView>
    </Grid>
</UserControl>
