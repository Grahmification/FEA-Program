<UserControl x:Class="FEA_Program.Views.ViewPortControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:h="clr-namespace:HelixToolkit.Wpf.SharpDX;assembly=HelixToolkit.Wpf.SharpDX"
             xmlns:vm="clr-namespace:FEA_Program.ViewModels"
             xmlns:conv="clr-namespace:FEA_Program.Converters"
             xmlns:local="clr-namespace:FEA_Program.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <vm:ViewPortVM/>
    </UserControl.DataContext>


    <Grid>
        <h:Viewport3DX EffectsManager="{Binding EffectsManager}"
                        Camera="{Binding Camera}"
                        IsViewCubeEdgeClicksEnabled="True">
            <h:AmbientLight3D Color="{Binding AmbientLightColor}" />
            <h:DirectionalLight3D Direction="{Binding Camera.LookDirection}" Color="{Binding DirectionalLightColor}" />
            <h:ScreenQuadModel3D Texture="{Binding BackgroundTexture}" />



            <h:LineGeometryModel3D x:Name="grid" Geometry="{Binding Grid}" Transform="{Binding GridTransform}" Color="{Binding GridColor}"/>

            <h:CoordinateSystemModel3D CoordinateSystemLabelZ=""/>

            <h:ItemsModel3D x:Name="itemsModel1" ItemsSource="{Binding ItemsSource}">
                <h:ItemsModel3D.ItemTemplate>
                    <DataTemplate>
                        <h:MeshGeometryModel3D Geometry="{Binding Geometry}"
                                                Material="{Binding Material}"
                                                Transform="{Binding Transform}" />
                    </DataTemplate>
                </h:ItemsModel3D.ItemTemplate>
            </h:ItemsModel3D>

            <!-- Bind the main scene group -->
            <h:GroupModel3D x:Name="SceneRoot" ItemsSource="{Binding SceneObjects}" />

            <h:ItemsModel3D x:Name="itemsModel2" ItemsSource="{Binding ColorItems}">
                <h:ItemsModel3D.ItemTemplate>
                    <DataTemplate>
                        <local:NodeVisual3Dx Position="{Binding Position}"/>
                    </DataTemplate>
                </h:ItemsModel3D.ItemTemplate>
            </h:ItemsModel3D>

        </h:Viewport3DX>
    </Grid>
</UserControl>
