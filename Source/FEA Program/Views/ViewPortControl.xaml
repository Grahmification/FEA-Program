<UserControl x:Class="FEA_Program.Views.ViewPortControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:h="clr-namespace:HelixToolkit.Wpf.SharpDX;assembly=HelixToolkit.Wpf.SharpDX"
             xmlns:vm="clr-namespace:FEA_Program.ViewModels"
             xmlns:conv="clr-namespace:FEA_Program.Converters"
             xmlns:local="clr-namespace:FEA_Program.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <vm:ViewPortVM/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid>
        <h:Viewport3DX EffectsManager="{Binding EffectsManager}"
                       Camera="{Binding Camera}"
                       IsViewCubeEdgeClicksEnabled="True"
                       ShowViewCube="{Binding Is3Dimensional}"
                       AllowLeftRightRotation="{Binding Is3Dimensional}"
                       AllowUpDownRotation="{Binding Is3Dimensional}">
            <h:AmbientLight3D Color="DimGray"  />
            <h:DirectionalLight3D Direction="{Binding Camera.LookDirection}" Color="White" />
            <h:ScreenQuadModel3D Texture="{Binding BackgroundTexture}" />

            <local:GridVisual3D Color="Gray" Visibility="{Binding Is3Dimensional, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <h:CoordinateSystemModel3D CoordinateSystemLabelZ="{Binding CoordZText}"/>

            <!-- ✨ Allow external views to inject multiple extra 3D elements -->
            <h:GroupModel3D ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=DrawItems}" />

            <!-- Test elements -->
            <h:GroupModel3D x:Name="TestElements" Visibility="Hidden">
                <h:AxisPlaneGridModel3D GridColor="White"/>
                <h:TransformManipulator3D/>
                <h:ViewBoxModel3D/>
            </h:GroupModel3D>
        </h:Viewport3DX>
    </Grid>
</UserControl>
